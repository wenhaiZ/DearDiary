<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.neon.deardiary">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".diarylist.DiaryListActivity"
                  android:theme="@style/Activity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".diaryedit.DiaryEditActivity">
        </activity>

        <activity android:name=".diaryquery.DiaryQueryActivity">
        </activity>

        <activity android:name=".settings.SettingsActivity">
        </activity>

        <receiver
            android:name=".receiver.NotifyReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.example.neon.deardiary.Receiver"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>